<?xml version="1.0"?>
<!-- {{ ansible_managed }} -->
<yandex>
  <remote_servers>
{% for cluster_name in clickhouse_clustersitems() | list %}
    <{{ cluster_name }}>
{% for shard_name, replicas in cluster_name.items() | list %}
      <shard>
        <internal_replication>true</internal_replication>
{% for replica in replicas %}
        <replica>
          <host>{{ replica['host'] }}</host>
          <port>{{ replica['port'] | default(9000) }}</port>
        </replica>
{% endfor %}
      </shard>
    </{{ shard_name }}>
{% endfor %}
  </remote_servers>
</yandex>
